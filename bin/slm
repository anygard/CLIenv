# This utility removes a symlink and creates a new one, a single command to
# switch a symlink to another target file

if [ $# -eq 2 ]; then
    link=$1
    target=$2
else
    echo "Useage: $0 <link> <target>"
    exit 127
fi

if [ -e $link -a -L $link ]; then
    rm $link
fi

ln -s $target $link

