if [ ! "$1" ]; then
  echo "Usage: $0 <host>"
  exit 1
fi

pushd ~

target=andenyga@$1

ssh-copy-id $target

scp -rp .vimrc .vim $target:
scp -rp .theme $target:

cat <<EOF | ssh $target "cat >> .bashrc"
test -s ~/.theme/theme.sh && . ~/.theme/theme.sh gnome-terminal || true
PATH=/sbin:/usr/sbin/:~/bin:$PATH
EOF

popd
